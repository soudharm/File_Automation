@model Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - File_Automation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/File_Automation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light @*bg-secondary bg-opacity-100*@ border-bottom box-shadow mb-3 " style=" background-color:darkcyan;height:5rem">
            <div class="container-fluid">
                <a class="navbar-brand"><img width="35px" src="~/images/AA.png" />File Automation</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            @if(User.Identity.IsAuthenticated)
            {
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img width="37px" src="~/images/Home.png" />Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logs"><img width="35px" src="~/images/Logs.png" />Logs</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar float-none">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a><img width="36px" src="~/images/user.png" />@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-sm btn-danger" asp-action="Logout" asp-controller="Login">Logout</a>
                        </li>
                    </ul>
                </div>
                
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />

    <footer class="border-top footer text-muted">
        <div class="container" style="color:black"> 
            &copy; 2022 - File Automation
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>
    body {
        background-image: url(https://img.freepik.com/premium-photo/businesswoman-hand-touch-folder-document-management-system-online-documentation-database-process-automation-efficiently-manage-files-work-knowledge-corporate-business-technology_162459-2197.jpg?w=1380);
        background-repeat: no-repeat;
        /*background-position: bottom;
        background-position-x: 100%;*/
        background-color: cornsilk;
        background-size: 1600px 800px;
    }
</style>
